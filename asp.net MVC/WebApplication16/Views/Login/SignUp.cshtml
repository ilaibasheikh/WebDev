@model WebApplication16.Models.user

@{
    ViewBag.Title = "SignUp";
}

<h2 class="text-center">Sign Up</h2>
@ViewBag.SuccessMessage

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4 col-md-offset-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4 class="text-center mb-4" style="font-size: 25px;">Create Account</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group row">
                @Html.LabelFor(model => model.username, htmlAttributes: new { @class = "col-sm-3 col-form-label" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "col-sm-3 col-form-label" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>
            </div>
          

            <div class="form-group row">
                <div class="col-sm-12 text-center">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>
        }

        <div class="text-center mt-3">
            @Html.ActionLink("Back to Login", "Index", "Login")
        </div>
    </div>
</div>
